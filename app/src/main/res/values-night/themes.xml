<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.News" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color (darker for dark mode) -->
        <item name="colorPrimary">@color/dark_blue1</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color (softer for dark mode) -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorOnSecondary">@color/dark_blue0</item>

        <!-- Surface (background for components like cards) -->
        <item name="colorSurface">@color/dark_blue0</item>
        <item name="colorOnSurface">@color/light_grey</item>

        <!-- Background (app's main background) -->
        <item name="android:colorBackground">@color/dark_blue0</item>
        <item name="colorOnBackground">@color/light_grey</item>

        <!-- Error color (ensure visibility in dark mode) -->
        <item name="colorError">@color/light_blue</item>
        <item name="colorOnError">@color/dark_blue0</item>

        <!-- Primary container -->
        <item name="colorPrimaryContainer">@color/dark_blue1</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary container -->
        <item name="colorSecondaryContainer">@color/blue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Surface variant (subtle surfaces) -->
        <item name="colorSurfaceVariant">@color/dark_blue1</item>
        <item name="colorOnSurfaceVariant">@color/light_grey</item>

        <!-- Outline (borders, dividers) -->
        <item name="colorOutline">@color/grey</item>
    </style>
</resources>